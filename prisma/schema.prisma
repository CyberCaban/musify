// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(uuid())
  role         String
  email        String @unique
  password     String
  name         String
  tracks       Track[]
  refreshToken String?
}

model Track {
  id     String @id @default(uuid())
  title  String
  author User   @relation(references: [id], fields: [userId])
  userId String
}
