generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(uuid())
  role         String
  email        String  @unique
  password     String
  name         String
  refreshToken String?
  tracks       Track[]
}

model Track {
  id       String @id @default(uuid())
  filename String
  title    String
  userId   String
  author   User   @relation(fields: [userId], references: [id])
}
